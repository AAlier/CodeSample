<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/categoryMargin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/categorySize"
        android:layout_height="@dimen/categorySize" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/marginHorizontal"
        tools:text="This is sample text"
        android:textSize="@dimen/textSize"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/marginHorizontal" />

</LinearLayout>